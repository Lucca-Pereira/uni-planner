datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Subject {
  id     Int     @id @default(autoincrement())
  name   String
  color  String
  events Event[]
}

model Event {
  id        Int      @id @default(autoincrement())
  title     String
  start     DateTime
  end       DateTime
  type      String
  subject   Subject  @relation(fields: [subjectId], references: [id])
  subjectId Int
}